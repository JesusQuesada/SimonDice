<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">

        <Button
            android:id="@+id/nueva"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:text="@string/new_game"
            android:visibility="visible"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/start"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:text="@string/start"
            android:visibility="visible"
            android:layout_weight="1"/>



    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        android:layout_weight="13">


        <Button
            android:id="@+id/buttonRed"
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:background="@drawable/red_hover"
            />

        <Button
            android:id="@+id/buttonGreen"
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:background="@drawable/green_hover"
            />

        <Button
            android:id="@+id/buttonCentral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:background="@drawable/center_hover"
            />

        <Button
            android:id="@+id/buttonBlue"
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:background="@drawable/blue_hover"
            />


        <Button
            android:id="@+id/buttonYellow"
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:background="@drawable/yellow_hover"
            />


    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">

        <TextView
            android:id="@+id/puntuacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/loser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/turno"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical|fill_horizontal"
            android:text="Turno: 0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>

